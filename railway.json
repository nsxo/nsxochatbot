{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.admin"
  },
  "deploy": {
    "startCommand": "python telegram_bot/admin_dashboard/start_server.py",
    "initCommand": "cd telegram_bot && python deployment/migrate_database.py && python deployment/railway_init_db.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}