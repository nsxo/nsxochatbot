{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "telegram_bot/Dockerfile"
  },
  "deploy": {
    "startCommand": "python deployment/simple_railway_bot.py",
    "initCommand": "python deployment/migrate_database.py && python deployment/railway_init_db.py",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}